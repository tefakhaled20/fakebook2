<head>
  <%- include('../includes/header') %>
<link rel="stylesheet" href="/styles/signup.css">
<link rel="stylesheet" href="/styles/UI.css">
<script  src="/scripts/image-preview.js" defer></script>

</head>
<body>
  <main class="main-content">
    <div class="form-container">
      <div class="form-header">
        <h1 class="form-title">Create your account</h1>
        <p class="form-subtitle">Join our community of developers</p>
      </div>

      <form action="/signup?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data" >
        <div class="avatar-upload">
          <div class="avatar-preview">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <img id="avatar-img" src="<%= user.imagePath %>"  alt="Profile avatar">
          </div>
          <div class="avatar-controls">
            <h3 class="avatar-title">Profile picture</h3>
            <p class="avatar-description">Upload a profile picture to personalize your account</p>
            <div class="file-input-container">
              <input type="file" id="avatar" name="image" value="<%= user.imagePath %>" class="file-input" accept="image/*" >
              <label for="avatar" class="file-input-btn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  <polyline points="17 8 12 3 7 8"></polyline>
                  <line x1="12" y1="3" x2="12" y2="15"></line>
                </svg>
                Upload image
              </label>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="form-col">
            <div class="form-group">
              <label for="firstname" class="form-label">First name</label>
              <input type="text" id="first-name" name="firstname" value="<%= user.firstname %>" class="form-input"  placeholder="John" required>
            </div>
          </div>
          <div class="form-col">
            <div class="form-group">
              <label for="lastname" class="form-label">Last name</label>
              <input type="text" id="last-name" name="lastname" class="form-input" value="<%= user.lastname %>"  placeholder="Doe" required>
            </div>
          </div>
        </div>
        <div class="location-section">
          <div class="location-header">
            <svg class="location-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <h3 class="location-title">Location Information</h3>
          </div>
          
          <div class="form-row">
            <div class="form-col">
              <div class="form-group">
                <label for="city" class="form-label">City</label>
                <input type="text" id="city" name="city" class="form-input" value="<%= user.city %>"  placeholder="San Francisco">
              </div>
            </div>
            <div class="form-col">
              <div class="form-group">
                <label for="country" class="form-label">Country</label>
                <select id="country" name="country" class="form-input">
                  <option value="" disabled selected><%= user.country %></option>
                  <option value="us">United States</option>
                  <option value="ca">Canada</option>
                  <option value="uk">United Kingdom</option>
                  <option value="au">Australia</option>
                  <option value="in">India</option>
                  <option value="de">Germany</option>
                  <option value="fr">France</option>
                  <option value="jp">Japan</option>
                  <option value="br">Brazil</option>
                  <option value="other">Other</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="email" class="form-label">Email address</label>
          <input type="email" id="email" name="email" class="form-input"  value="<%= user.email %>" placeholder="you@example.com" required>
        </div>

        <div class="form-group">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" name="username" class="form-input" value="<%= user.username %>"  placeholder="johndoe" required>
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-input" value="<%= user.password %>" placeholder="••••••••" required>
          <div class="password-requirements">
            <p>Password must contain:</p>
            <div class="requirement">
              <svg class="requirement-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>At least 8 characters</span>
            </div>
            <div class="requirement">
              <svg class="requirement-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>At least one uppercase letter</span>
            </div>
            <div class="requirement">
              <svg class="requirement-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>At least one number</span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="confirm-password" class="form-label">Confirm password</label>
          <input type="password" name="confirm-password" id="confirm-password" class="form-input" value="<%= user.password %>" placeholder="••••••••" required>
        </div>

        <div id="updateData">
          <button type="submit" class="btn btn-primary submit-btn">update your data</button>
        </div>
      </form>
    </div>
  </main>
  
  <div class="posts-section">
    <h2 class="posts-title">Your posts</h2>
    <section class="posts-container">
      <% for(const post of posts) { %>
        <article class="post">
          <div class="post-header">
              <div class="post-user">
                  <img src="<%= post.imagePath %>" alt="<%= post.username %>" class="post-avatar">
                  <div class="post-user-info">
                      <h3 class="post-username"><%= post.username %></h3>
                      <span class="post-time"><%= post.timestamp.toLocaleString() %></span>
                  </div>
              </div>
              <button class="post-menu">
                  <svg viewBox="0 0 24 24" class="menu-icon">
                      <circle cx="12" cy="12" r="1" fill="currentColor"/>
                      <circle cx="19" cy="12" r="1" fill="currentColor"/>
                      <circle cx="5" cy="12" r="1" fill="currentColor"/>
                  </svg>
              </button>
          </div>
          <div class="post-content">
              <%= post.content %>
          </div>
          <div class="post-actions">
              <button class="action-button likebutton" data-post-id="<%= post._id %>" data-csrf="<%= csrfToken %>">
                  <svg viewBox="0 0 24 24" class="action-icon">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" fill="none" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <span class="likeCount">
                      <%= post.likeCount > 999 ? 
                          (post.likeCount < 1000000 ? 
                              (post.likeCount/1000).toFixed(1) + 'K' : 
                              (post.likeCount/1000000).toFixed(1) + 'M') : 
                          post.likeCount %>
                  </span>
              </button>
              <button class="action-button">
                  <svg viewBox="0 0 24 24" class="action-icon">
                      <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z" fill="none" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <span>Comment</span>
              </button>
              <button class="action-button">
                  <svg viewBox="0 0 24 24" class="action-icon">
                      <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8" fill="none" stroke="currentColor" stroke-width="2"/>
                      <polyline points="16 6 12 2 8 6" fill="none" stroke="currentColor" stroke-width="2"/>
                      <line x1="12" y1="2" x2="12" y2="15" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <span>Share</span>
              </button>
          </div>
      </article>
      <% } %>
    </section>
  </div>
</body>